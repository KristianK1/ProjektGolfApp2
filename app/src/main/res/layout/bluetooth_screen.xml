<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/devStatus_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="Device status"
        android:textSize="40dp"
        android:layout_margin="10dp"

        />

    <TextView
        android:id="@+id/devMode_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/devStatus_label"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Device mode"
        android:textSize="40dp"
        />

    <Button
        android:id="@+id/connBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/devMode_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:padding="20dp"

        android:text="Connect"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/sendBT_T1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/connBT"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:padding="20dp"

        android:text="Send T=1"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/sendBT_T2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sendBT_T1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:padding="20dp"

        android:text="Send T=2"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendBT_T2"
        app:layout_constraintBottom_toBottomOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>