<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Unos novog uređaja"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Name: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="Unesite ime za novi uređaj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_APIkey"
        app:layout_constraintTop_toTopOf="@id/tv_name" />


    <TextView
        android:id="@+id/tv_channelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Channel Id: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name" />

    <EditText
        android:id="@+id/et_channelId"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="Unesite channel ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_channelId"
        app:layout_constraintTop_toTopOf="@id/tv_channelId" />


    <TextView
        android:id="@+id/tv_APIkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="API key: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_channelId" />

    <EditText
        android:id="@+id/et_APIkey"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:autofillHints="username"
        android:hint="Unesite API ključ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_APIkey"
        app:layout_constraintTop_toTopOf="@id/tv_APIkey" />


    <TextView
        android:id="@+id/tv_MAC_ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="MAC: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_APIkey" />

    <EditText
        android:id="@+id/et_MAC_ADD"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:autofillHints="password"
        android:hint="Unesite MAC adresu uređaja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_MAC_ADD"
        app:layout_constraintTop_toTopOf="@id/tv_MAC_ADD" />

    <Button
        android:id="@+id/bt_addDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Unesite novi uređaj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_MAC_ADD"

        />


</androidx.constraintlayout.widget.ConstraintLayout>