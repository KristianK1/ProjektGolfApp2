<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intervalLayout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <View
            android:id="@+id/intervalSideView"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/intervalChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/intervalSideView"
            android:text="Interval"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"

            />


        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/intervalChoice"
            app:layout_constraintStart_toEndOf="@id/intervalSideView"
            android:text="Enter interval start"
            android:textSize="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/intervalSideView"
            app:layout_constraintTop_toBottomOf="@id/date1"
            android:text="Enter interval end"
            android:textSize="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/historyLayout"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:layout_constraintTop_toBottomOf="@id/intervalLayout"
    app:layout_constraintStart_toStartOf="parent"
    >



    <View
        android:id="@+id/historySideView"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_secondary_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/historyChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/historySideView"
        android:text="History"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
        android:clickable="false"
        />


    <TextView
        android:id="@+id/history_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyChoice"
        app:layout_constraintStart_toEndOf="@id/historySideView"
        android:layout_alignParentTop="true"
        android:text="Enter history "
        android:textSize="30dp"

        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/blackLine"
        android:layout_width="match_parent"
        android:layout_height="3px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/historyLayout"
        android:background="@color/black"
        />

    <TextView
        android:id="@+id/tv_current_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Trenutni ureÄ‘aj:"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/tv_current_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_current_label"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SB 160 GJ"
        android:textSize="30dp"
        android:layout_margin="20dp"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_devices"
        android:layout_width="match_parent"

        android:layout_height="0px"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_name" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@android:drawable/ic_input_add"
        />

</androidx.constraintlayout.widget.ConstraintLayout>